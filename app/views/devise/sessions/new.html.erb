<div class="border rounded-lg my-10 shadow p-10 w-11/12 sm:w-5/12 mx-auto block">
  <h2 class="font-bold text-2xl text-center mb-8">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group my-2">
      <p><%= f.label :email, class: "form-label block font-bold" %></p>
      <p><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-full rounded mt-1 shadow" %></p>
    </div>

    <div class="field form-group my-4">
      <p><%= f.label :password, class: "form-label block font-bold" %></p>
      <p><%= f.password_field :password, autocomplete: "current-password", class: "form-control w-full rounded mt-1 shadow" %></p>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-group my-4 flex items-center">
        <p><%= f.check_box :remember_me, class: "form-label block font-bold mr-2" %></p>
        <p><%= f.label :remember_me %></p>
      </div>
    <% end %>

    <div class="actions form-group my-10">
      <%= f.submit "Log in", class: "btn btn-primary bg-cyan-600 py-2 text-white w-full rounded font-bold" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
