<div class="border rounded-lg my-10 shadow p-10 w-11/12 sm:w-5/12 mx-auto block">
  <h1 class="font-bold text-2xl text-center mb-8">Edit <%= resource_name.to_s.humanize %></h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-group my-2">
      <p><%= f.label :name, class: "form-label block font-bold" %></p>
      <p><%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control w-full rounded mt-1 shadow" %></p>
    </div>

    <div class="field form-group my-4">
      <p><%= f.label :role, class: "form-label block font-bold" %></p>
      <p><%= f.select :role, options_for_select([['Employee', 'employee'], ['HR', 'hr']], selected: resource.role), {}, class: "form-control w-full rounded mt-1 shadow" %></p>
    </div>

    <div class="field form-group my-4">
      <p><%= f.label :department, class: "form-label block font-bold" %></p>
      <p><%= f.text_field :department, autocomplete: "department", class: "form-control w-full rounded mt-1 shadow" %></p>
    </div>

    <div class="field form-group my-4">
      <p><%= f.label :email, class: "form-label block font-bold" %></p>
      <p><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-full rounded mt-1 shadow" %></p>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field form-group my-4">
      <p><%= f.label :password, class: "form-label block font-bold" %> <i>(leave blank if you don't want to change it)</i></p>
      <p><%= f.password_field :password, autocomplete: "new-password", class: "form-control w-full rounded mt-1 shadow" %></p>
      <% if @minimum_password_length %>
        <p><em><%= @minimum_password_length %> characters minimum</em></p>
      <% end %>
    </div>

    <div class="field form-group my-4">
      <p><%= f.label :password_confirmation, class: "form-label block font-bold" %></p>
      <p><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control w-full rounded mt-1 shadow" %></p>
    </div>

    <div class="field form-group my-4">
      <p><%= f.label :current_password, class: "form-label block font-bold" %> <i>(we need your current password to confirm your changes)</i></p>
      <p><%= f.password_field :current_password, autocomplete: "current-password", class: "form-control w-full rounded mt-1 shadow" %></p>
    </div>

    <div class="actions form-group mt-6">
      <button class="text-white rounded w-full my-5">
        <%= f.submit "Update", class: "btn btn-primary bg-cyan-600 py-2 text-white w-full rounded font-bold" %>
      </button>
    </div>
  <% end %>

  <div>Unhappy? 
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete , class: "bg-black text-white rounded w-full py-2"%></div>

  <button class= "bg-black text-white rounded mt-5">
    <%= link_to "Back", :back, class:"py-2 px-4 inline-block" %>
  </button>
</div>
