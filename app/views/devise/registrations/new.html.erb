<div class="border rounded-lg my-10 shadow p-10 w-11/12 sm:w-5/12 mx-auto block">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group my-2">
      <%= f.label :email, "Email", class: "form-label block font-bold" %>
      <%= f.email_field :email, autofocus: true, class: "form-control w-full rounded mt-1 shadow" %>
    </div>

    <div class="form-group my-4">
      <%= f.label :password, "Password", class: "form-label block font-bold" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control w-full rounded mt-1 shadow" %>
    </div>

    <div class="form-group my-4">
      <%= f.label :password_confirmation, "Confirm Password", class: "form-label block font-bold" %>
      <%= f.password_field :password_confirmation, class: "form-control w-full rounded mt-1 shadow" %>
    </div>

    <div class="form-group my-4">
      <%= f.label :role, "Role", class: "form-label block font-bold" %>
      <%= f.select :role, options_for_select([['Employee', 'employee'], ['HR', 'hr']], selected: resource.role), {}, class: "form-control w-full rounded mt-1 shadow" %>
    </div>

    <div class="actions my-10">
      <%= f.submit "Sign up", class: "btn btn-primary bg-cyan-600 py-2 text-white w-full rounded font-bold" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

