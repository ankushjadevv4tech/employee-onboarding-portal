<div class="border rounded-lg my-10 shadow p-10 w-11/12 sm:w-5/12 mx-auto block">
  <h2 class="font-bold text-2xl text-center mb-8">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-group my-2">
      <p><%= f.label :email, class: "form-label block font-bold" %></p>
      <p><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-full rounded mt-1 shadow" %></p>
    </div>

    <div class="actions form-group my-10">
      <%= f.submit "Send me password reset instructions", class: "btn btn-primary bg-cyan-600 py-2 text-white w-full rounded font-bold" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>