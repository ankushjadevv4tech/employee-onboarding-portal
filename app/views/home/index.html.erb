<h1>Welcome to the Employee Onboarding Portal</h1>
<%= link_to 'Sign Up', new_user_registration_path %> |
<%= link_to 'Log In', new_user_session_path %>

<% if user_signed_in? && current_user.hr? %>
  <%= link_to "Manage Employees", employees_path, class: "btn btn-primary" %>
  <%= link_to 'Task Tracker', tasks_path, class: 'btn btn-primary' %>
<% end %>

<% if user_signed_in? && current_user.employee? %>
  <%= link_to 'View My Tasks', employee_path(current_user), class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Update My Profile', edit_user_registration_path, class: 'btn btn-secondary' %>

<% if user_signed_in? %>
<%= link_to "Sign Out", destroy_user_session_path, data: { "turbo-method": :delete } %>
<% end %>