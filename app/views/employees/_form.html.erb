<%= form_with model: @employee, local: true, url: @employee.new_record? ? employees_path : employee_path(@employee) do |form| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation" class="border p-4 rounded text-red-600 border-red-600">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>
      <ul>
        <% @employee.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group my-2">
    <%= form.label :name, class: "form-label block font-bold" %>
    <%= form.text_field :name, class: "form-control w-full rounded mt-1 shadow" %>
  </div>

  <div class="form-group my-4">
    <%= form.label :email, class: "form-label block font-bold" %>
    <%= form.email_field :email, class: "form-control w-full rounded mt-1 shadow" %>
  </div>

  <div class="form-group my-4">
    <%= form.label :department, class: "form-label block font-bold" %>
    <%= form.text_field :department, class: "form-control w-full rounded mt-1 shadow" %>
  </div>

  <div class="form-group my-4">
    <%= form.label :onboarding_status, class: "form-label block font-bold" %>
    <%= form.select :onboarding_status, options_for_select([['Not Started', 'not_started'], ['In Progress', 'in_progress'], ['Completed', 'completed']], @employee.onboarding_status), {}, class: "form-control w-full rounded mt-1 shadow" %>
  </div>

  <div class="form-group my-10">
    <%= form.submit class: "btn btn-primary bg-cyan-600 py-2 text-white w-full rounded font-bold" %>
  </div>
<% end %>
